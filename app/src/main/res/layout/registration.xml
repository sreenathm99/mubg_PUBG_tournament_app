<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.mubg.tournament.main.htmlextractpage"
    android:background="#1a1a1a"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/linearfirst">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginBottom="400dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pubgwalnew" />

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="fill_parent"
        android:layout_height="185dp"
        android:layout_marginStart="0dp"
        android:layout_below="@+id/linearfirst"
        android:layout_marginEnd="0dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardback"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Map"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="130dp"
                android:text="Server"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="280dp"
                android:text="Mode"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#444"
                android:visibility="invisible"
                ></TableRow>
            <TextView
                android:id="@+id/mymap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/myserver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="130dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/mymode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="280dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#444"
                android:visibility="invisible"></TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="Entry Fee"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="130dp"
                android:text="Winning Per Kill"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="280dp"
                android:text="Type"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#444"
                android:visibility="invisible"></TableRow>
            <TextView
                android:id="@+id/myentry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/mywinning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="130dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/mytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="280dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#444"
                android:visibility="invisible"></TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="Timing"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="130dp"
                android:text=""
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="280dp"
                android:text="Version"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="10dp" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#444"
                android:visibility="invisible"></TableRow>
            <TextView
                android:id="@+id/mytiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginStart="10dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/myversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginStart="280dp"

                android:fontFamily="sans-serif"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/yellowmy"
        android:id="@+id/incard"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="How MUBG Tournaments Works ?"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif"
            />
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"
        android:visibility="visible"
        android:layout_marginTop="21dp"></TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 1. Regsiter Your Entry to this Match using below form
            \n
2. After completing the form. Send payment (Entry Fee) to the below Given UPI ID / PayTM
\n
3. While sending payment, Add your user id (user id used for registration) as payment description
\n
4. After Verifying your payment your name will be added to the confirmed participants list in the match page (Home)"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:id="@+id/payment"
            android:text="UPI ID: sfsdfsfsdfsfsdfsfsf Paytm: 3543453453453"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif"
            android:textIsSelectable="true"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/matchdesccard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginTop="5dp"
        android:minHeight="200dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/matchdesccard"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/registrationtext"/>

        <TextView
            android:id="@+id/rmatchid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registrationtext"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="sdfsdfsfsdfsfsf"
            android:fontFamily="sans-serif"/>




        <WebView
            android:id="@+id/regdesc"
            android:layout_width="370dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            >

        </WebView>


    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>
</RelativeLayout>
