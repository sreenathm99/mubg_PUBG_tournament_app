<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="me.mubg.tournament.main.htmlextractpage"
        android:background="#1a1a1a"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="fill_parent"
                        android:layout_height="230dp"
                        android:layout_marginLeft="-20dp"
                        android:layout_marginBottom="400dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/pubgwalnew" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="fill_parent"
                    android:layout_height="185dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="210dp"
                    android:layout_marginEnd="0dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cardback"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Map"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="130dp"
                            android:text="Server"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="280dp"
                            android:text="Mode"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#444"
                            android:visibility="invisible"
                            ></TableRow>
                        <TextView
                            android:id="@+id/mymap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="10dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/myserver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="130dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/mymode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="280dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="14dp"/>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#444"
                            android:visibility="invisible"></TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Entry Fee"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="130dp"
                            android:text="Winning Per Kill"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="280dp"
                            android:text="Type"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#444"
                            android:visibility="invisible"></TableRow>
                        <TextView
                            android:id="@+id/myentry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginStart="10dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:id="@+id/mywinning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="130dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/mytype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="280dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15dp"/>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#444"
                            android:visibility="invisible"></TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:text="Timing"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="130dp"
                            android:text=""
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="280dp"
                            android:text="Version"
                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="10dp" />
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="#444"
                            android:visibility="invisible"></TableRow>
                        <TextView
                            android:id="@+id/mytiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-1dp"
                            android:layout_marginStart="10dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/myversion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="280dp"

                            android:fontFamily="sans-serif"
                            android:layout_marginLeft="11dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/roomcard"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/yellowmy"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif"
                            android:text="Match ID : "

                            android:textColor="#000000" />
                        <TextView
                            android:id="@+id/matchid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="-20dp"
                            android:fontFamily="sans-serif"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="155dp"
                            android:layout_marginTop="-20dp"
                            android:fontFamily="sans-serif"
                            android:text="Room Id :        "
                            android:textColor="#000000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="255dp"
                            android:layout_marginTop="-20dp"
                            android:fontFamily="sans-serif"
                            android:text="Password :        "
                            android:textColor="#000000"
                            />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#b3cccc"></TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="sans-serif"
                            android:text="Room ID and Password will be sent to your provided Mob No. and Email 15 Mins Before the match."
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/matchdesccard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="461dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="5dp"
                    android:minHeight="100dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"/>
                    <WebView
                        android:id="@+id/matchdesc"
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginRight="0dp"
                        android:layout_gravity="center_horizontal">

                    </WebView>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/floatscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="horizontal"
        android:background="#E74C3C">

        <Button

            android:id="@+id/regbutton"
            android:layout_width="match_parent"

            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="Enroll Now"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:visibility="visible"
            />


    </LinearLayout>


</RelativeLayout>


